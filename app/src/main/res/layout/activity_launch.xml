<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Unique APP."
        android:textSize="18sp"
        android:layout_margin="8dp"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_below="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
    <Button
        android:id="@+id/button_ui"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:text="Launch UI"
        android:textColor="#F3A100"
        android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_fcm"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Launch FCM"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_timer"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Launch Timer"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/button_line"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Draw Line"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>