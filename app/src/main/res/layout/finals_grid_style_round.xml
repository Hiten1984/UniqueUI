<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/team1_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    tools:src="@drawable/ic_launcher_foreground"
                    android:scaleType="fitCenter"/>

                <Space
                    android:id="@+id/hr_space_1"
                    android:layout_below="@+id/team1_image"
                    android:layout_width="1dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_below="@+id/hr_space_1"
                    android:id="@+id/team1"
                    android:textSize="11sp"
                    android:textColor="#000000"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Text"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/team2_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                >

                <ImageView
                    android:id="@+id/team2_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    tools:src="@drawable/ic_launcher_foreground"
                    android:scaleType="fitCenter"/>

                <Space
                    android:id="@+id/hr_space_2"
                    android:layout_below="@+id/team2_image"
                    android:layout_width="1dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_below="@+id/hr_space_2"
                    android:id="@+id/team2"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Text"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <!-- <LinearLayout
                android:id="@+id/team_container_34"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/team3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    tools:text="MEL" />
                <TextView
                    android:id="@+id/team4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    tools:text="GEEL" />
            </LinearLayout>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/team3_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="1dp"
                    tools:src="@drawable/ic_launcher_foreground"
                    android:scaleType="fitCenter"/>

                <Space
                    android:id="@+id/hr_space_3"
                    android:layout_below="@+id/team3_image"
                    android:layout_width="1dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_below="@+id/hr_space_3"
                    android:id="@+id/team3"
                    android:textSize="11sp"
                    android:textColor="#000000"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Text"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/team4_container"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                >

            <ImageView
                android:id="@+id/team4_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="1dp"
                tools:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"/>

            <Space
                android:id="@+id/hr_space_4"
                android:layout_below="@+id/team4_image"
                android:layout_width="1dp"
                android:layout_height="8dp"/>

            <TextView
                android:layout_below="@+id/hr_space_4"
                android:id="@+id/team4"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Text"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/team_container_56"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/team5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:gravity="center"
                tools:text="SYD" />

            <TextView
                android:id="@+id/team6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                tools:text="GWS" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/team_container_78"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="1dp"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/team7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                tools:text="COLL" />
            <TextView
                android:id="@+id/team8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                tools:text="WCE" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
